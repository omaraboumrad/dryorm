# ============= PR Base Images (No Django pre-installed) =============
# These images have all dependencies except Django.
# Django is installed at runtime from a mounted PR source directory.
# Uses Bookworm for newer SQLite (3.40+) required by newer Django.

# PostgreSQL PR Base - Builder (Bookworm)
FROM python:3.12-slim-bookworm AS pr-builder-postgres
RUN apt-get update && apt-get install -y \
    libpq-dev \
    gcc \
    && rm -rf /var/lib/apt/lists/*
RUN pip install --no-cache-dir psycopg2-binary==2.9.10

# PostgreSQL + PR Base
FROM python:3.12-slim-bookworm AS pr-base-postgres
ENV PYTHONUNBUFFERED 1
RUN apt-get update && apt-get install -y \
    postgresql-client \
    libpq5 \
    && rm -rf /var/lib/apt/lists/*
COPY --from=pr-builder-postgres /usr/local/lib/python3.12/site-packages /usr/local/lib/python3.12/site-packages
WORKDIR /app/
COPY requirements-pr-base.txt /tmp/requirements.txt
RUN pip install --no-cache-dir -r /tmp/requirements.txt \
    && rm -f /tmp/requirements.txt \
    && pip cache purge
COPY . /app/
CMD ["./run-pr.sh"]

